                    <div class="stat-value">@statistics.TotalExecutions.ToString("N0")</div>
                    <div class="stat-label">Total Executions</div>
                    <div class="stat-detail">@statistics.ExecutionsLast24Hours in last 24h</div>
                </div>
            </div>

            <!-- Pass Rate -->
            <div class="stat-card @(statistics.OverallPassRate >= 90 ? "stat-success" : statistics.OverallPassRate >= 70 ? "stat-warning" : "stat-danger")">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-content">
                    <div class="stat-value">@statistics.OverallPassRate.ToString("F1")%</div>
                    <div class="stat-label">Overall Pass Rate</div>
                    <div class="stat-detail">
                        7d: @statistics.PassRateLast7Days.ToString("F1")% | 
                        30d: @statistics.PassRateLast30Days.ToString("F1")%
                    </div>
                </div>
            </div>

            <!-- Total Tests -->
            <div class="stat-card">
                <div class="stat-icon">üß™</div>
                <div class="stat-content">
                    <div class="stat-value">@statistics.TotalTests</div>
                    <div class="stat-label">Total Tests</div>
                    <div class="stat-detail">Across @statistics.TotalRecordings recordings</div>
                </div>
            </div>

            <!-- Flaky Tests -->
            <div class="stat-card @(statistics.FlakyTestCount > 0 ? "stat-warning" : "stat-success")">
                <div class="stat-icon">‚ö†Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-value">@statistics.FlakyTestCount</div>
                    <div class="stat-label">Flaky Tests</div>
                    <div class="stat-detail">@statistics.StableTestCount stable tests</div>
                </div>
            </div>

            <!-- Average Duration -->
            <div class="stat-card">
                <div class="stat-icon">‚è±Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-value">@FormatDuration(statistics.AverageExecutionDurationMs)</div>
                    <div class="stat-label">Avg Duration</div>
                    <div class="stat-detail">@statistics.TotalExecutionTimeHours.ToString("F1")h total time</div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="stat-card">
                <div class="stat-icon">üìà</div>
                <div class="stat-content">
                    <div class="stat-value">@statistics.ExecutionsLast7Days</div>
                    <div class="stat-label">Last 7 Days</div>
                    <div class="stat-detail">@statistics.ExecutionsLast30Days in last 30 days</div>
