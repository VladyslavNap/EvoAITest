        <div class="health-banner @GetHealthClass(statistics.Health)">
            <div class="health-content">
                <span class="health-icon">@GetHealthIcon(statistics.Health)</span>
                <div class="health-info">
                    <h3>Test Suite Health: @statistics.Health</h3>
                    <p>@GetHealthDescription(statistics.Health)</p>
