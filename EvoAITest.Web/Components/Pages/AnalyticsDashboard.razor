            <div class="spinner"></div>
            <p>Loading analytics data...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <h4>Error Loading Dashboard</h4>
            <p>@error</p>
            <button class="btn btn-sm btn-secondary" @onclick="RefreshDashboard">Retry</button>
        </div>
    }
