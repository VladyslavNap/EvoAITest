                    <div class="simple-chart">
                        @foreach (var trend in statistics.RecentTrends.OrderBy(t => t.Timestamp))
                        {
                            var height = trend.PassRate;
                            var colorClass = trend.PassRate >= 90 ? "bar-success" : 
                                           trend.PassRate >= 70 ? "bar-warning" : "bar-danger";
                            
                            <div class="chart-bar-wrapper" title="@trend.Timestamp.ToString("MMM dd"): @trend.PassRate.ToString("F1")%">
                                <div class="chart-bar @colorClass" style="height: @(height)%">
                                    <span class="bar-label">@trend.PassRate.ToString("F0")%</span>
                                </div>
                                <div class="chart-label">@trend.Timestamp.ToString("MMM dd")</div>
                            </div>
