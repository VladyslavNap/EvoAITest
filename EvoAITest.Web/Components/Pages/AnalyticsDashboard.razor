@code {
private DashboardStatistics? statistics;
private bool loading = true;
private string? error = null;
private bool realtimeUpdatesEnabled = true;

protected override async Task OnInitializedAsync()
{
    // Load initial dashboard data
    await LoadDashboard();

    // Connect to SignalR hub for real-time updates
    await InitializeSignalR();
}

private async Task InitializeSignalR()
{
    try
    {
        if (!HubClient.IsConnected)
        {
            await HubClient.StartAsync();
        }

        // Subscribe to dashboard updates
        await HubClient.SubscribeToDashboardAsync();

        // Register event handlers
        HubClient.OnDashboardUpdated += HandleDashboardUpdate;
        HubClient.OnFlakyTestDetected += HandleFlakyTestDetected;
        HubClient.OnPassRateAlert += HandlePassRateAlert;
    }
    catch (Exception ex)
    {
        Console.WriteLine($"SignalR connection error: {ex.Message}");
        // Continue without real-time updates
    }
}

private async Task HandleDashboardUpdate(DashboardStatistics updatedStatistics)
{
    if (realtimeUpdatesEnabled)
    {
        statistics = updatedStatistics;
        await InvokeAsync(StateHasChanged);
    }
}

private async Task HandleFlakyTestDetected(FlakyTestAnalysis analysis)
{
    Console.WriteLine($"New flaky test detected: {analysis.TestName} (Score: {analysis.FlakinessScore:F1})");
    // Could show a toast notification here
    await InvokeAsync(StateHasChanged);
}

private async Task HandlePassRateAlert(PassRateAlert alert)
{
    Console.WriteLine($"Pass rate alert: {alert.Message}");
    // Could show a toast notification here
    await InvokeAsync(StateHasChanged);
}

private async Task LoadDashboard()
{
    try
    {
        loading = true;
        error = null;
        StateHasChanged();

        statistics = await HttpClient.GetFromJsonAsync<DashboardStatistics>("/api/analytics/dashboard");
    }
    catch (Exception ex)
    {
        error = $"Failed to load dashboard: {ex.Message}";
    }
    finally
    {
        loading = false;
        StateHasChanged();
    }
}

public async ValueTask DisposeAsync()
{
    // Unregister event handlers
    HubClient.OnDashboardUpdated -= HandleDashboardUpdate;
    HubClient.OnFlakyTestDetected -= HandleFlakyTestDetected;
    HubClient.OnPassRateAlert -= HandlePassRateAlert;

    // Unsubscribe from dashboard updates
    await HubClient.UnsubscribeFromDashboardAsync();
}

    private async Task RefreshDashboard()
    {
        await LoadDashboard();
    }

    private void NavigateToFlakyTests()
    {
        Navigation.NavigateTo("/analytics/flaky-tests");
    }

    private void NavigateToFlakyTestsPage()
    {
        Navigation.NavigateTo("/analytics/flaky-tests");
    }

    private void NavigateToExecutionHistory()
    {
        Navigation.NavigateTo("/test-execution/results");
    }

    private void NavigateToRecording(Guid recordingId)
    {
        Navigation.NavigateTo($"/analytics/recordings/{recordingId}/insights");
    }

    private string GetHealthClass(TestSuiteHealth health)
    {
        return health switch
        {
            TestSuiteHealth.Excellent => "health-excellent",
            TestSuiteHealth.Good => "health-good",
            TestSuiteHealth.Fair => "health-fair",
            TestSuiteHealth.Poor => "health-poor",
            _ => "health-unknown"
        };
    }

    private string GetHealthIcon(TestSuiteHealth health)
    {
        return health switch
        {
            TestSuiteHealth.Excellent => "üåü",
            TestSuiteHealth.Good => "‚úÖ",
            TestSuiteHealth.Fair => "‚ö†Ô∏è",
            TestSuiteHealth.Poor => "‚ùå",
            _ => "‚ùì"
        };
    }

    private string GetHealthDescription(TestSuiteHealth health)
    {
        return health switch
        {
            TestSuiteHealth.Excellent => "Your test suite is performing excellently with high pass rates and minimal flakiness.",
            TestSuiteHealth.Good => "Your test suite is in good shape with reliable test execution.",
            TestSuiteHealth.Fair => "Your test suite needs some attention to improve reliability.",
            TestSuiteHealth.Poor => "Your test suite requires immediate attention due to frequent failures or high flakiness.",
            _ => "Insufficient data to determine test suite health."
        };
    }

    private string FormatDuration(long milliseconds)
    {
        if (milliseconds < 1000)
            return $"{milliseconds}ms";
        if (milliseconds < 60000)
            return $"{(milliseconds / 1000.0):F1}s";
        return $"{(milliseconds / 60000.0):F1}m";
    }

    private string TruncateName(string name, int maxLength)
    {
        if (name.Length <= maxLength)
            return name;
        return name.Substring(0, maxLength - 3) + "...";
    }

    private void ExportDashboard()
    {
        // TODO: Implement export functionality
        Console.WriteLine("Export dashboard data");
    }
}

