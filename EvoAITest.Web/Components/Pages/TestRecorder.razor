@page "/test-recorder"
@using EvoAITest.Core.Models.Recording
@using EvoAITest.Core.Abstractions
@inject IRecordingService RecordingService
@inject ITestGenerator TestGenerator
@rendermode InteractiveServer

<PageTitle>Test Recorder - EvoAITest</PageTitle>

<div class="test-recorder-page">
    <div class="page-header">
        <h1>?? Test Recorder</h1>
        <p class="subtitle">Record your interactions and generate automated tests with AI</p>
    </div>

    <div class="recorder-layout">
        <!-- Left Panel: Recording Control -->
        <div class="recorder-panel">
            <RecordingControl 
                OnRecordingStarted="HandleRecordingStarted"
                OnRecordingStopped="HandleRecordingStopped" />
            
            @if (currentSession != null && currentSession.Status == RecordingStatus.Stopped)
            {
                <div class="generation-panel">
                    <h3>Generate Test</h3>
                    <p>Recording complete with @currentSession.Interactions.Count actions.</p>
                    
                    <div class="generation-options">
                        <div class="form-group">
                            <label>Test Framework</label>
                            <select @bind="selectedFramework" class="form-control">
                                <option value="xUnit">xUnit</option>
                                <option value="NUnit">NUnit</option>
                                <option value="MSTest">MSTest</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Options</label>
                            <div class="checkbox-group">
                                <label>
                                    <input type="checkbox" @bind="includeComments" />
                                    Include Comments
                                </label>
                                <label>
                                    <input type="checkbox" @bind="generatePageObjects" />
                                    Generate Page Objects
                                </label>
                                <label>
                                    <input type="checkbox" @bind="autoGenerateAssertions" />
                                    Auto-Generate Assertions
                                </label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-success btn-lg" 
                            @onclick="GenerateTest" 
                            disabled="@isGenerating">
                        @if (isGenerating)
                        {
                            <span class="spinner">?</span>
                            <span>Generating...</span>
                        }
                        else
                        {
                            <span class="icon">??</span>
                            <span>Generate Test with AI</span>
                        }
                    </button>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }
        </div>

        <!-- Right Panel: Test Preview -->
        <div class="preview-panel">
            <TestPreview 
                GeneratedTest="generatedTest"
                Session="currentSession"
                OnEditRequested="HandleEditRequested" />
        </div>
    </div>

    <!-- Recording Sessions List -->
    <div class="sessions-section">
        <h2>Recent Recording Sessions</h2>
        <div class="sessions-list">
            @if (!recentSessions.Any())
            {
                <div class="no-sessions">
                    <p>No recording sessions yet. Start your first recording above!</p>
                </div>
            }
            else
            {
                @foreach (var session in recentSessions)
                {
                    <div class="session-card" @onclick="() => LoadSession(session.Id)">
                        <div class="session-header">
                            <h4>@session.Name</h4>
                            <span class="session-status status-@session.Status.ToString().ToLower()">
                                @session.Status
                            </span>
                        </div>
                        <div class="session-details">
                            <span class="detail">@session.Interactions.Count actions</span>
                            <span class="detail">@FormatDate(session.StartedAt)</span>
                            <span class="detail">@FormatDuration(session.DurationMs)</span>
                        </div>
                        @if (!string.IsNullOrEmpty(session.Description))
                        {
                            <p class="session-description">@session.Description</p>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private RecordingSession? currentSession;
    private GeneratedTest? generatedTest;
    private List<RecordingSession> recentSessions = new();
    
    private string selectedFramework = "xUnit";
    private bool includeComments = true;
    private bool generatePageObjects = false;
    private bool autoGenerateAssertions = true;
    private bool isGenerating = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadRecentSessions();
    }

    private async Task LoadRecentSessions()
    {
        try
        {
            recentSessions = await RecordingService.GetAllRecordingSessionsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load sessions: {ex.Message}";
        }
    }

    private void HandleRecordingStarted(RecordingSession session)
    {
        currentSession = session;
        generatedTest = null;
        errorMessage = string.Empty;
    }

    private async Task HandleRecordingStopped(RecordingSession session)
    {
        currentSession = session;
        await LoadRecentSessions();
    }

    private async Task GenerateTest()
    {
        if (currentSession == null)
            return;

        try
        {
            isGenerating = true;
            errorMessage = string.Empty;

            var options = new TestGenerationOptions
            {
                TestFramework = selectedFramework,
                IncludeComments = includeComments,
                GeneratePageObjects = generatePageObjects,
                AutoGenerateAssertions = autoGenerateAssertions,
                ClassName = SanitizeClassName(currentSession.Name),
                Namespace = "EvoAITest.Generated"
            };

            generatedTest = await TestGenerator.GenerateTestAsync(currentSession, options);
            
            // Update session with generated code
            currentSession.GeneratedTestCode = generatedTest.Code;
            currentSession.Status = RecordingStatus.Generated;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to generate test: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
        }
    }

    private async Task LoadSession(Guid sessionId)
    {
        try
        {
            var session = await RecordingService.GetRecordingSessionAsync(sessionId);
            if (session != null)
            {
                currentSession = session;
                
                // If test was already generated, parse it
                if (!string.IsNullOrEmpty(session.GeneratedTestCode))
                {
                    // TODO: Parse generated test from code
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load session: {ex.Message}";
        }
    }

    private void HandleEditRequested(GeneratedTest test)
    {
        // TODO: Implement test editing functionality
        errorMessage = "Test editing coming soon!";
    }

    private string SanitizeClassName(string name)
    {
        return System.Text.RegularExpressions.Regex.Replace(name, @"[^a-zA-Z0-9_]", "") + "Tests";
    }

    private string FormatDate(DateTimeOffset date)
    {
        return date.ToString("MMM d, yyyy h:mm tt");
    }

    private string FormatDuration(long durationMs)
    {
        var ts = TimeSpan.FromMilliseconds(durationMs);
        if (ts.TotalHours >= 1)
            return $"{ts.Hours:D2}:{ts.Minutes:D2}:{ts.Seconds:D2}";
        return $"{ts.Minutes:D2}:{ts.Seconds:D2}";
    }
}

