{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EvoAIDatabase": "Server=.;Database=EvoAITestDB;User Id=u_EvoAi;Password=ComplexPassword123!@#;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "EvoAITest": {
    "Core": {
      "LLMProvider": "AzureOpenAI",
      "LLMModel": "gpt-5.2-chat",
      "BrowserTimeoutMs": 30000,
      "HeadlessMode": true,
      "MaxRetries": 3,
      "ScreenshotOutputPath": "/tmp/screenshots",
      "LogLevel": "Information",
      "EnableTelemetry": true,
      "ServiceName": "EvoAITest.ApiService",
      "ErrorRecovery": {
        "Enabled": true,
        "AutoRetry": true,
        "MaxRetries": 3,
        "InitialDelayMs": 500,
        "MaxDelayMs": 10000,
        "UseExponentialBackoff": true,
        "UseJitter": true,
        "BackoffMultiplier": 2.0,
        "EnabledActions": [
          "WaitAndRetry",
          "PageRefresh",
          "AlternativeSelector",
          "WaitForStability",
          "ClearCookies"
        ]
      }
    },
    "ToolExecutor": {
      "MaxRetries": 3,
      "InitialRetryDelayMs": 500,
      "MaxRetryDelayMs": 10000,
      "UseExponentialBackoff": true,
      "MaxConcurrentTools": 1,
      "TimeoutPerToolMs": 30000,
      "EnableDetailedLogging": true,
      "MaxHistorySize": 100
    }
  }
}
