{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EvoAIDatabase": "Server=.;Database=EvoAITestDB;Integrated Security=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "EvoAITest": {
    "Core": {
      "LLMProvider": "AzureOpenAI",
      "LLMModel": "gpt-5",
      "AzureOpenAIEndpoint": "https://your-endpoint.openai.azure.com",
      "AzureOpenAIApiKey": "",
      "AzureOpenAIDeployment": "gpt-5",
      "AzureOpenAIApiVersion": "2024-10-21",
      "UseAzureOpenAIManagedIdentity": true,
      "KeyVaultEndpoint": "",
      "KeyVaultSecretName": "AzureOpenAI-ApiKey",
      "EnableMultiModelRouting": true,
      "EnableProviderFallback": true,
      "RoutingStrategy": "TaskBased",
      "CircuitBreakerFailureThreshold": 5,
      "CircuitBreakerOpenDurationSeconds": 30,
      "LLMRequestTimeoutSeconds": 60,
      "OllamaEndpoint": "http://localhost:11434",
      "OllamaModel": "qwen2.5-7b",
      "LocalLLMEndpoint": "http://localhost:8080",
      "BrowserType": "Chromium",
      "Headless": true,
      "ViewportWidth": 1920,
      "ViewportHeight": 1080,
      "DefaultTimeoutMs": 30000,
      "DefaultNavigationTimeoutMs": 30000
    },
    "ToolExecutor": {
      "MaxRetries": 3,
      "InitialRetryDelayMs": 500,
      "MaxRetryDelayMs": 5000,
      "UseExponentialBackoff": true,
      "TimeoutPerToolMs": 30000,
      "EnableDetailedLogging": true,
      "MaxHistorySize": 100
    }
  }
}
